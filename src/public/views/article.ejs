<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.title %></title>
</head>
<body>
    <h1><%= data.title %></h1>
    <h2><%= data.createDate.formated %></h2>
    <h3>Atualizado: <%= data.updateDate.formated %></h3>

    <div>   
        <% if(data.tags) data.tags.forEach(tag => { %>
            <label><%= tag %> </label>
        <% }); %>
    </div>

    <div>
        <%- data.HTMLcontent %>
    </div>
</body>
</html>